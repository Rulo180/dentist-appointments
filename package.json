{
  "name": "dentist-appointments",
  "private": true,
  "eslintConfig": {
    "extends": "@meteorjs/eslint-config-meteor"
  },
  "babel": {
    "env": {
      "COVERAGE": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha --port 3100",
    "test:watch": "TEST_WATCH=1 meteor test --driver-package meteortesting:mocha --port 3100",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha --port 3100",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "coverage:unit": "BABEL_ENV=COVERAGE TEST_BROWSER_DRIVER=puppeteer COVERAGE=1 COVERAGE_OUT_HTML=1 COVERAGE_APP_FOLDER=$PWD/ meteor test --once --driver-package meteortesting:mocha --port 3200",
    "coverage:watch": "BABEL_ENV=COVERAGE COVERAGE=1 COVERAGE_VERBOSE=1 COVERAGE_APP_FOLDER=$PWD/ TEST_WATCH=1 meteor test --driver-package meteortesting:mocha --port 3200",
    "lint": "npm run eslint ; npm run sasslint"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.5",
    "bootstrap": "^4.2.1",
    "i18next": "^14.0.1",
    "jquery": "^3.3.1",
    "lodash": "^4.17.11",
    "meteor-node-stubs": "^0.4.1",
    "popper.js": "^1.14.6",
    "react": "^16.7.0",
    "react-addons-pure-render-mixin": "^15.6.2",
    "react-dom": "^16.7.0",
    "react-i18next": "^9.0.10",
    "react-modal": "^3.8.1",
    "react-router-dom": "^4.3.1",
    "react-select": "^2.3.0",
    "simpl-schema": "^1.5.3"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.0",
    "chai": "^4.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.12.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-meteor": "^5.1.0",
    "eslint-plugin-react": "^7.12.3",
    "faker": "^4.1.0",
    "moment": "^2.24.0",
    "puppeteer": "^1.12.2",
    "sass-lint": "^1.12.1",
    "sinon": "^7.2.3"
  }
}
